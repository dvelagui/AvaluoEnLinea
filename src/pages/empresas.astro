    max-width: 800px;
  }
  span {
    color: #ca1d80;
  }
  .solutions_img {
    width: 100%;
    max-width: 611px;
  }
  .btn-plan-price {
    border-radius: 32px;
    font-weight: 600;
    font-size: 16px;
    line-height: 18px;
    text-align: center;
    letter-spacing: -0.01em;
    padding: 14px 24px;
  }
  .btn-download {
    background: #f9e6f1;
    color: #8b1458;
    padding: 13px 22px;
    font-family: "Source Sans Pro";
    border-radius: 32px;
    font-weight: 600;
    font-size: 16px;
    line-height: 18px;
    text-align: center;
    letter-spacing: -0.01em;
    padding: 14px 24px;
  }
  .btn-view {
    background: #ca1d80;
    color: #ffffff;
    padding: 13px 22px;
    font-family: "Source Sans Pro";
    border-radius: 32px;
