    background-color: #ffffff;
  }
  .info_img {
    width: 90%;
    max-width: 250px;
    margin: 96px auto 24px auto;
  }
  .title-info {
    font-weight: 400;
    font-size: 32px;
    line-height: 100%;
    text-align: center;
    letter-spacing: -0.01em;
    color: #282a33;
    width: 90%;
    max-width: 600px;
    margin: 96px auto 24px auto;
  }

  h4 {
    font-family: "Comfortaa";
    font-weight: 700;
    font-size: 24px;
