    color: #6b7082;
  }
  .pricing_subtitle a {
    text-decoration: none;
    color: #ca1d80;
  }
  .footnote-solutions {
    font-weight: 600;
    font-size: 14px;
    line-height: 18px;
    letter-spacing: -0.01em;
    color: #6b7082;
  }
  .footnote-solutions span {
    color: #ca1d80;
  }

  .cards-features {
    background: #ffffff;
    border: 2px solid #f6f7fa;
    border-radius: 24px;
    width: 100%;
  }
  .solutions-more {
    width: 100%;
    max-width: 417px;
    padding: 40px 32px 10px 32px;
    border-radius: none;
    border: none;
    background: rgba(249, 230, 241, 0.5);
  }
  .solutions-more_title {
    font-weight: 400;
    font-size: 24px;
    line-height: 100%;
    text-align: center;
    letter-spacing: -0.01em;
    color: #282a33;
  }
  .pricing {
margin-top: 96px;
  }
</style>
