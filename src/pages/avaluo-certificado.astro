---
import features from "../data/features.json"
import CardsSolutions from "../components/CardsSolutions.vue";
import HeroBannerAvaluo from "../components/HeroBannerAvaluo.vue";
import ContactForm from "../components/ContactForm.vue";
import Layout from "../layouts/layouts.astro";
---

<Layout pageTitle="Avalúo Certificado">
  <HeroBannerAvaluo
    titleBanner="Avalúo Certificado"
    subtitleBanner="Pide un avalúo certificado fácil y rápido"
    btnBanner1="Avaluar mi inmueble"
    imgBanner="https://firebasestorage.googleapis.com/v0/b/quasar-chat-285ff.appspot.com/o/Avaluo%2Fimg_hero_avaluo.png?alt=media&token=7a9e84f9-8624-4804-b6d3-d9de30c5fca2"
    imgBannerMobile="https://firebasestorage.googleapis.com/v0/b/quasar-chat-285ff.appspot.com/o/Avaluo%2Fimg_hero_avaluo_movil.png?alt=media&token=85b7db44-ad79-4c83-90bc-720b8350ccfb"
  />
  <p class="title text-center my-5">¿Para que puedes usar el avalúo certificado?</p>
  {
    features.map((feature) => (
      feature.report === 'avaluo' ? <CardsSolutions step-img={feature.img} step-text={feature.text} step-ast={feature.ast} />  : ""  
    
    ))
    }

  <div class="row d-flex justify-content-center align-items-center p-5 p-md-2">
      <a class="col-12 col-md-2 btn btn-download mx-2" href="/empresas#Pricing">Descargar ejemplo</a>
      <a class="col-12 col-md-2 btn btn-view btn-primary mx-2 mt-3 mt-md-0" href="#ContactForm"
      >Avaluar mi inmueble</a
    >
  </div>
  <ContactForm id="ContactForm" client:visible />

</Layout>
<style scoped lang="scss">
  .title {
    font-weight: 600;
    font-size: 40px;
    line-height: 100%;
    letter-spacing: -0.01em;
    color: #000000;
  }
    .btn-download {
    background: #f9e6f1;
    color: #8b1458;
    padding: 13px 22px;
    font-family: "Source Sans Pro";
    border-radius: 32px;
    font-weight: 600;
    font-size: 16px;
    line-height: 18px;
    text-align: center;
    letter-spacing: -0.01em;
    padding: 14px 24px;
  }
  .btn-view {
    background: #ca1d80;
    color: #ffffff;
    padding: 13px 22px;
    font-family: "Source Sans Pro";
    border-radius: 32px;
    font-weight: 600;
    font-size: 16px;
    line-height: 18px;
    text-align: center;
    letter-spacing: -0.01em;
    padding: 14px 24px;
  }
    @media (max-width: 992px) {
      .title {
        font-size: 32px;
      }
    }
</style>
